<ui:ContentDialog 
    x:Class="wmsApp.dialog.PrintMonthDeliverDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:local="using:wmsApp.controls"
    Title="选择打印信息"
    PrimaryButtonText="确定"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonText="取消"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    >

    <Grid Width="500">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <TextBlock Text="选择日期：" VerticalAlignment="Center" Margin="20,0,0,0" />
            <TextBox x:Name="YearTextBox" Width="85" Margin="5" />
            <TextBlock Text="年" VerticalAlignment="Center" Margin="0,0,10,0" />
            <TextBox x:Name="MonthTextBox" Width="55" Margin="0,0,5,0" Height="32" />
            <TextBlock Text="月" VerticalAlignment="Center" Margin="0,0,10,0" />
        </StackPanel>
    </Grid>
</ui:ContentDialog>
